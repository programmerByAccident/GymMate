<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/tool_bar"
        layout="@layout/toolbar"
        ></include>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Repetitions"
            android:textAlignment="center"

            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:layout_width="match_parent"
            android:textColor="@color/black"
            android:layout_height="wrap_content" />
    </LinearLayout>



    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin">

        <ImageButton
            android:layout_width="wrap_content"
            android:background="@color/colorPrimary"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/ic_plus_white_24dp"
            android:id="@+id/addition_repetitions"
            android:layout_weight="1" />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:background="@drawable/apptheme_textfield_activated_holo_light"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editTextRepetitions"
            android:layout_weight="1" />
        <ImageButton
            android:layout_width="wrap_content"
            android:background="@color/colorPrimary"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/ic_remove_white_24dp"
            android:id="@+id/substraction_repetitions"

            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Weight"
            android:textAlignment="center"

            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:layout_width="match_parent"
            android:textColor="@color/black"
            android:layout_height="wrap_content" />
    </LinearLayout>



    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin">

        <ImageButton
            android:layout_width="wrap_content"
            android:background="@color/colorPrimary"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/ic_plus_white_24dp"
            android:id="@+id/addition_weight"
            android:layout_weight="1" />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:background="@drawable/apptheme_textfield_activated_holo_light"
            android:textAlignment="center"
            android:inputType="number|numberDecimal"
            android:ems="10"
            android:id="@+id/editTextWeights"
            android:layout_weight="1" />
        <ImageButton
            android:layout_width="wrap_content"
            android:background="@color/colorPrimary"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/ic_remove_white_24dp"
            android:id="@+id/substraction_weight"
            android:layout_weight="1" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        >


            <Button
                android:id="@+id/save_button"
                android:layout_width="wrap_content"
                android:background="@color/colorPrimary"
                android:layout_height="match_parent"
                android:text="SAVE"
                android:layout_weight="1"
                android:layout_marginRight="@dimen/activity_horizontal_margin"/>

            <Button
                android:id="@+id/clear_button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_clear_white_24dp"

                android:text="CLEAR"
                />

    </LinearLayout>


    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>